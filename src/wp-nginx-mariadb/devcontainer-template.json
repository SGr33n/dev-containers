{
    "id": "wp-nginx-mariadb",
    "version": "0.1.0",
    "name": "WP, nginx, MariaDB",
    "description": "Develop WP applications with Nginx and MariaDB.",
    "documentationURL": "https://github.com/sgr33n/dev-container-templates/tree/main/src/wp-nginx-mariadb",
    "publisher": "ServerWP Cloud",
    "licenseURL": "https://github.com/sgr33n/dev-container-templates/blob/main/LICENCE",
    "options": {
        "phpVersion": {
            "type": "string",
            "description": "PHP version:",
            "proposals": [
                "8.2"
            ],
            "default": "8.2"
        },
        "wpVersion": {
            "type": "string",
            "description": "WP version:",
            "proposals": [
                "6.0"
            ],
            "default": "6.0"
        },
        "contentPath": {
            "type": "string",
            "description": "Content path:",
            "proposals": [
                "plugins",
                "themes"
            ],
            "default": "themes"
        }
    },
    "platforms": [
        "PHP",
        "MySQL"
    ]
}